{
  "name": "tdd-workshop",
  "version": "1.0.0",
  "description": "Basic setup for running tests",
  "scripts": {
    "test": "vitest",
    "test:watch": "vitest --watch",
    "check": "eslint && prettier . --check",
    "fix": "eslint --fix && prettier . --write",
    "prepare": "husky"
  },
  "author": "Andreas Houben",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "eslint": "^9.9.1",
    "globals": "^15.9.0",
    "husky": "^9.1.5",
    "lint-staged": "^15.2.9",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.3.0",
    "vitest": "^2.0.5"
  },
  "lint-staged": {
    "*.ts": "eslint",
    "**/*": "prettier --write --ignore-unknown"
  }
}
